                                    <contextFile>${project.basedir}/../viewer/src/test/tomcatconf/context.xml</contextFile>
                                </webapp>
                            </webapps-->
                        </configuration>
                        <executions>
                            <execution>
                                <id>tomcat-startup</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <fork>true</fork>
                                </configuration>
                            </execution>
                            <execution>
                                <id>tomcat-shutdown</id>
                                <goals>
                                    <goal>shutdown</goal>
                                </goals>
                                <phase>post-integration-test</phase>
                            </execution>
                        </executions>
